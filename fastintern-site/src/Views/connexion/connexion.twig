{# connexion.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/connexion.css">
    <title>{{ page_title|default('Connexion') }}</title>
</head>
<body>
    <header>
        <div class="logo">
            <img src="http://fastintern-static.local/static/assets/logo.png" alt="Logo FastIntern">
            <span class="titre-logo">{{ site_name|default('FastIntern') }}</span>
        </div>
        <nav>
            <a class="btn-retour" href="/index" {% if activePage == 'entreprises' %}class="active"{% endif %}>{{ accueil_text|default('Accueil') }}</a>
        </nav>
    </header>
    
    <main>
        <section class="slogan">
            <img src="http://fastintern-static.local/static/assets/cloud.png" alt="cloud">
            <h1>{{ slogan|default('Votre stage, en un éclair !') }}</h1>
        </section>
        
        <h1 class="titre-connexion">{{ connexion_title|default('Se connecter') }}</h1>
        
        {% if show_error_link|default(false) %}
            <a href="#">pour erreur</a>
        {% endif %}
        
        <div class="container">
            <div class="box">
                <p class="welcome-text">
                    {{ welcome_text_line1|default('Heureux de vous revoir sur FastIntern !') }}<br>
                    {{ welcome_text_line2|default('Connectez-vous pour accéder à toutes vos offres et candidatures.') }}
                </p>
                
                <form class="form-connexion" action="{{ form_action|default('#') }}" method="{{ form_method|default('post') }}">
                    {% if error is defined %}
                        <div class="error-message">{{ error }}</div>
                    {% endif %}
                    
                    <label for="email">{{ email_label|default('Adresse mail') }}</label>
                    <input type="email" id="email" name="email" required value="{{ email_value|default('') }}">
                    
                    <label for="password">{{ password_label|default('Mot de passe') }}</label>
                    <input type="password" id="password" name="password" required>
                    
                    <a href="{{ forgot_password_link|default('#') }}" class="forgot-password">
                        {{ forgot_password_text|default('Mot de passe oublié ?') }}
                    </a>
                    
                    <button type="submit" class="btn-connexion">
                        {{ submit_button_text|default('Se connecter') }}
                    </button>
                </form>
            </div>
        </div>
    </main>
    
    <footer>
        {% if footer_content is defined %}
            {{ footer_content|raw }}
        {% endif %}
    </footer>
</body>
</html>