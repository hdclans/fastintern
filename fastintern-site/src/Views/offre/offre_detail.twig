{# offre_detail.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/offres.css">
    <title>{{ offre.titre }} - FastIntern</title>
</head>
<body>
    <!-- header -->
    <header>
        <div class="logo">
            <img src="http://fastintern-static.local/static/assets/logo.png" alt="FastIntern Logo">
            <span>FastIntern</span>
        </div>
        <nav>
            <a href="/?uri=index">Accueil</a>
            <a href="/?uri=offres">Offres de stage</a>
            <a href="#">Candidatures</a>
            <a href="#">Entreprises</a>
            <a href="#">Contact</a>
        </nav>
    </header>

    <!-- Détails de l'offre -->
    <main class="offer-detail-container">
        <div class="offer-header">
            <h1>{{ offre.titre }}</h1>
            <div class="company-info">
                <h2>{{ offre.nom_entreprise }}</h2>
                <p class="location">{{ offre.adresse }}</p>
            </div>
        </div>

        <div class="offer-content">
            <div class="description-section">
                <h3>Description du stage</h3>
                <div class="description-content">
                    {{ offre.description|nl2br }}
                </div>
            </div>
        </div>

        <!-- Section d'upload -->
        <div class="upload-section">
            <h3>Postuler à cette offre</h3>
            <form action="/?uri=upload_candidature" method="POST" enctype="multipart/form-data" class="upload-form">
                <input type="hidden" name="offre_id" value="{{ offre.id_offre }}">

                <div class="file-upload">
                    <label for="cv">CV (PDF, max 2Mo)</label>
                    <input type="file" id="cv" name="cv" accept=".pdf" required>
                </div>

                <div class="file-upload">
                    <label for="lettre">Lettre de motivation (PDF, max 2Mo)</label>
                    <input type="file" id="lettre" name="lettre" accept=".pdf" required>
                </div>

                <button type="submit" class="apply-button">Postuler</button>
            </form>

            <a href="/?uri=offres" class="back-link">Retour aux offres</a>
        </div>
    </main>

    <!-- footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-columns">
                <div class="footer-column">
                    <h3>L'emploi</h3>
                    <ul>
                        <li><a href="#">Offres d'emploi par ville</a></li>
                        <li><a href="#">Offres d'emploi par secteurs</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>L'entreprise</h3>
                    <ul>
                        <li><a href="#">Qui sommes-nous ?</a></li>
                        <li><a href="#">On recrute</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Mentions légales</h3>
                    <ul>
                        <li><a href="/?uri=mentions">Informations légales</a></li>
                        <li><a href="/?uri=cgu">CGU</a></li>
                        <li><a href="/?uri=privacy">Confidentialité</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>