{# offre_etudiant.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/offres.css">
    <title>Offres Étudiant</title>
</head>
<body>
    <!-- header -->
    <!-- header -->
    <header>
        <div class="logo">
            <img src="http://fastintern-static.local/static/assets/logo.png" alt="FastIntern Logo">
            <span>FastIntern</span>
        </div>
        <nav>
            <a href="/?uri=index">Accueil</a>
            <a href="/?uri=offres">Offres de stage</a>
            <a href="#">Candidatures</a>
            <a href="#">Entreprises</a>
            <a href="#">Contact</a>
        </nav>
        <div class="connexion">
            <button>
                <img src="http://fastintern-static.local/static/assets/person.png" alt="person_icon" class="person_icon">
                <a href="connexion.html">Mon compte</a>
            </button>
        </div>

        <div class="burger-menu" onclick="toggleMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
    </header>

    <!-- slogan et rectangle bleu -->
    <section class="mid-section">
        <div class="highlight">
            <img src="http://fastintern-static.local/static/assets/cloud.png" alt="Mid Section Image">
            <span>Votre stage, en un éclair !</span>
        </div>
    </section>

    <section class="offers-section">
    <div class="offers-container">
        {% for offre in offres %}
            <div class="offer-block">
                <h3>{{ offre.titre }}</h3>
                <p class="company"><strong>Entreprise :</strong> {{ offre.nom_entreprise }}</p>
                <p class="description">
                    {{ offre.description|length > 150 ? offre.description|slice(0, 150) ~ '...' : offre.description }}
                </p>
                <p class="remuneration"><strong>Rémunération :</strong> {{ offre.remuneration ? offre.remuneration ~ ' €' : 'Non précisée' }}</p>
                <p class="dates">
                    <strong>Début :</strong> {{ offre.date_debut|date('d/m/Y') }}<br>
                    <strong>Fin :</strong> {{ offre.date_fin|date('d/m/Y') }}
                </p>
                <p class="publication-date"><em>Publié le {{ offre.date_publication|date('d/m/Y') }}</em></p>
                <a href="/?uri=offre_detail&id={{ offre.id_offre }}" class="details-link">Voir les détails</a>
            </div>
        {% else %}
            <p>Aucune offre disponible pour le moment.</p>
        {% endfor %}
    </div>

    <!-- Pagination -->
    <div class="pagination">
    {% if pagination.previous %}
        <a href="/?uri=offres&page={{ pagination.previous }}" class="prev">Précédent</a>
    {% endif %}

    {% for page in pagination.pages %}
        <a href="/?uri=offres&page={{ page }}" class="{{ page == pagination.current ? 'active' : '' }}">{{ page }}</a>
    {% endfor %}

    {% if pagination.next %}
        <a href="/?uri=offres&page={{ pagination.next }}" class="next">Suivant</a>
    {% endif %}
</div>
    </section>

    <!-- footer -->
    <footer>
        <div class="footer-content">

            <!-- <div class="bottom-title">
                <h1>FastIntern</h1>
            </div> -->

            <!-- Colonnes avec les liens etc -->
            <div class="footer-columns">
                <div class="footer-column">
                    <h3>L'emploi</h3>
                    <ul>
                        <li><a href="#">Offres d'emploi par ville</a></li>
                        <li><a href="#">Offres d'emploi par secteurs</a></li>
                        <li><a href="#">Offres d'emploi par entreprises</a></li>
                        <li><a href="#">Offres d'emploi par mots clés</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>L'entreprise</h3>
                    <ul>
                        <li><a href="#">Qui sommes-nous ?</a></li>
                        <li><a href="#">On recrute</a></li>
                        <li><a href="#">Accès client</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Mentions légales</h3>
                    <ul>
                        <li><a href="/?uri=mentions">Informations légales</a></li>
                        <li><a href="/?uri=cgu">CGU</a></li>
                        <li><a href="/?uri=privacy">Politique de confidentialité</a></li>
                        <li><a href="#">Aide et contact</a></li>
                    </ul>
                </div>
            </div>

            <!-- reseaux sociaux -->
            <div class="footer-social">
                <a href="#"><img src="http://fastintern-static.local/static/assets/instagram.png" alt="Instagram"></a>
                <a href="#"><img src="http://fastintern-static.local/static/assets/x.png" alt="X"></a>
                <a href="#"><img src="http://fastintern-static.local/static/assets/linkedin.png" alt="LinkedIn"></a>
                <a href="#"><img src="http://fastintern-static.local/static/assets/facebook.png" alt="Facebook"></a>
                <a href="#"><img src="http://fastintern-static.local/static/assets/youtube.png" alt="YouTube"></a>
            </div>
        </div>
    </footer>
</body>
</html>