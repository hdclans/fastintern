<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Étudiants</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/Admin/offres.css">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/layout/header.css">
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/layout/footer.css">
</head>
<body>
    <header>
        <div class="logo">
            <img src="http://fastintern-static.local/static/assets/logo.png" alt="Logo FastIntern">
            <span class="titre-logo">FastIntern</span>
        </div>
        <div class="nav-container">
            {% if session.user_id is defined %}
                {% if session.role_id == 2 %}
                    <nav>
                <a class="btn-accueil" href="?uri=pilote">Accueil</a>
                <div class="dropdown">
                    <button class="dropbtn">Gestion Offres</button>
                    <div class="dropdown-content">
                        <a href="?uri=pilote_offres">Gérer Offres</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">Gestion Entreprises</button>
                    <div class="dropdown-content">
                        <a href="?uri=pilote_entreprises">Gérer Entreprises</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">Gestion Utilisateurs</button>
                    <div class="dropdown-content">
                        <a href="?uri=pilote_etudiants">Gérer Étudiants</a>
                    </div>
                </div>
            </nav>
            
            <div class="profile-container">
                <a class="btn-profile" href="?uri=pilote_profil">
                    <i class="fas fa-user-circle"></i>
                    Mon Profil
                </a>
            </div>
                {% endif %}
            {% endif %}
        </div>
    </header>

    <main class="admin-container">
        <div class="actions-header">
            <h1>Gestion des Étudiants</h1>
            <button class="btn-create" onclick="toggleForm()">Créer un nouvel étudiant</button>
        </div>

        <!-- Formulaire de création/modification -->
        <div id="etudiantForm" class="form-container" style="display: none;">
            <h2 id="formTitle">Créer un nouvel étudiant</h2>
            <form action="/?uri=pilote_etudiants_save" method="POST">
                <input type="hidden" name="id_utilisateur" id="id_utilisateur">
                <!-- Champ caché pour définir automatiquement le rôle comme étudiant -->
                <input type="hidden" name="id_role" id="id_role" value="3">

                <div class="form-group">
                    <label for="nom">Nom *</label>
                    <input type="text" id="nom" name="nom" required>
                </div>

                <div class="form-group">
                    <label for="prenom">Prénom *</label>
                    <input type="text" id="prenom" name="prenom" required>
                </div>

                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="mot_de_passe">Mot de passe <span id="password-info">(laisser vide pour conserver l'actuel)</span></label>
                    <input type="password" id="mot_de_passe" name="mot_de_passe">
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">Enregistrer</button>
                    <button type="button" class="btn-cancel" onclick="toggleForm()">Annuler</button>
                </div>
            </form>
        </div>

        <!-- Recherche -->
        <div class="search-container">
            <form action="/?uri=pilote_etudiants" method="GET" class="search-form">
                <input type="hidden" name="uri" value="pilote_etudiants">
                <input type="text" name="search" placeholder="Rechercher par nom, prénom ou email" value="{{ search|default('') }}">
                <button type="submit" class="btn-search">Rechercher</button>
            </form>
        </div>

        <!-- Tableau des étudiants -->
        <div class="table-container">
            <table class="offres-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Date d'inscription</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.id_utilisateur }}</td>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{{ utilisateur.email }}</td>
                        <td>{{ utilisateur.date_inscription|date('d/m/Y') }}</td>
                        <td class="actions">
                            <button onclick="editEtudiant({{ utilisateur.id_utilisateur }}, '{{ utilisateur.nom }}', '{{ utilisateur.prenom }}', '{{ utilisateur.email }}')" class="btn-edit">Modifier</button>
                            <button onclick="deleteEtudiant({{ utilisateur.id_utilisateur }})" class="btn-delete">Supprimer</button>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="no-data">Aucun étudiant trouvé</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>

    <script src="http://fastintern-static.local/static/js/Admin/etudiants.js"></script>    
    <script src="http://fastintern-static.local/static/JS/layout/header.js"></script>
    <script src="http://fastintern-static.local/static/JS/layout/footer.js"></script>
</body>
</html>