<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Administrateurs</title>
    <link rel="stylesheet" href="http://fastintern-static.local/static/css/admin.css">
</head>
<body>
    <header>
        <div class="logo">
            <img src="http://fastintern-static.local/static/assets/logo.png" alt="Logo FastIntern">
            <span>FastIntern - Administration</span>
        </div>
        <nav>
            <a href="/?uri=admin">Accueil</a>
            <a href="/?uri=admin/admins" class="active">Gestion des Administrateurs</a>
            <a href="/?uri=logout" class="btn-logout">Déconnexion</a>
        </nav>
    </header>

    <main class="admin-container">
        <div class="actions-header">
            <h1>Gestion des Administrateurs</h1>
            <button class="btn-create" onclick="toggleForm()">Créer un nouvel administrateur</button>
        </div>

        <!-- Formulaire de création/modification -->
        <div id="adminForm" class="form-container" style="display: none;">
            <h2 id="formTitle">Créer un nouvel administrateur</h2>
            <form action="/?uri=admin/admins/save" method="POST">
                <input type="hidden" name="id_utilisateur" id="id_utilisateur">
                <!-- Champ caché pour définir automatiquement le rôle comme administrateur -->
                <input type="hidden" name="id_role" id="id_role" value="1">

                <div class="form-group">
                    <label for="nom">Nom *</label>
                    <input type="text" id="nom" name="nom" required>
                </div>

                <div class="form-group">
                    <label for="prenom">Prénom *</label>
                    <input type="text" id="prenom" name="prenom" required>
                </div>

                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="mot_de_passe">Mot de passe <span id="password-info">(laisser vide pour conserver l'actuel)</span></label>
                    <input type="password" id="mot_de_passe" name="mot_de_passe">
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">Enregistrer</button>
                    <button type="button" class="btn-cancel" onclick="toggleForm()">Annuler</button>
                </div>
            </form>
        </div>

        <!-- Recherche -->
        <div class="search-container">
            <form action="/?uri=admin/admins" method="GET" class="search-form">
                <input type="hidden" name="uri" value="admin/admins">
                <input type="text" name="search" placeholder="Rechercher par nom, prénom ou email" value="{{ search|default('') }}">
                <button type="submit" class="btn-search">Rechercher</button>
            </form>
        </div>

        <!-- Tableau des administrateurs -->
        <div class="table-container">
            <table class="offres-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Date d'inscription</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.id_utilisateur }}</td>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{{ utilisateur.email }}</td>
                        <td>{{ utilisateur.date_inscription|date('d/m/Y') }}</td>
                        <td class="actions">
                            <button onclick="editAdmin({{ utilisateur.id_utilisateur }}, '{{ utilisateur.nom }}', '{{ utilisateur.prenom }}', '{{ utilisateur.email }}')" class="btn-edit">Modifier</button>
                            <button onclick="confirmDelete({{ utilisateur.id_utilisateur }})" class="btn-delete">Supprimer</button>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="no-data">Aucun administrateur trouvé</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>

    <script src="http://fastintern-static.local/static/js/Admin/admins.js"></script>
</body>
</html>